---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const projects = await getCollection('projects');
---

<Layout title="Projects">
  <section class="py-20">
    <div class="max-w-4xl mx-auto text-center">
      <h1 class="text-5xl font-display font-bold mb-6 bg-clip-text text-transparent bg-gradient-to-r from-primary-500 to-purple-600">
        Our Projects
      </h1>
      <p class="text-xl text-gray-600 dark:text-gray-400 mb-12">
        Explore our innovative technology projects and research initiatives
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-7xl mx-auto">
      {projects.map(project => (
        <article class="bg-white dark:bg-gray-800 rounded-lg shadow-lg overflow-hidden transition-transform hover:scale-105">
          <img
            src={`${project.data.image}?w=600&q=80&fm=webp&auto=format`}
            alt={project.data.title}
            class="w-full h-48 object-cover"
            loading="lazy"
            decoding="async"
            width="600"
            height="300"
            style="aspect-ratio: 16/9; content-visibility: auto"
          />
          <div class="p-6">
            <h2 class="text-xl font-display font-bold mb-3">{project.data.title}</h2>
            <p class="text-gray-600 dark:text-gray-400 mb-4">{project.data.description}</p>
            
            <div class="mb-4">
              <div class="flex flex-wrap gap-2">
                {project.data.technologies.map(tech => (
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-primary-100 dark:bg-primary-900 text-primary-800 dark:text-primary-200">
                    {tech}
                  </span>
                ))}
              </div>
            </div>

            <div class="flex gap-4">
              {project.data.github && (
                <a
                  href={project.data.github}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-gray-600 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400"
                >
                  <span class="flex items-center">
                    <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                      <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"/>
                    </svg>
                    GitHub
                  </span>
                </a>
              )}
              {project.data.demo && (
                <a
                  href={project.data.demo}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-gray-600 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400"
                >
                  <span class="flex items-center">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                    </svg>
                    Live Demo
                  </span>
                </a>
              )}
            </div>
          </div>
        </article>
      ))}
    </div>
  </section>
</Layout>